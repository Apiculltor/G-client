<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vuzix_background"
    tools:context=".MainActivity">

    <!-- SurfaceView para preview da cÃ¢mera -->
    <SurfaceView
        android:id="@+id/surface_view"
        android:layout_width="320dp"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <!-- === HEADER: STATUS GERAL === -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/vuzix_background"
        android:orientation="horizontal"
        android:padding="6dp">

        <!-- Status de gravaÃ§Ã£o -->
        <TextView
            android:id="@+id/recording_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="âšª Pronto"
            android:textColor="@color/vuzix_white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <!-- Status de conexÃ£o -->
        <TextView
            android:id="@+id/connection_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“¡ Desconectado"
            android:textColor="@color/vuzix_mint_green"
            android:textSize="12sp"
            android:gravity="center" />

        <!-- Tarefas de hoje -->
        <TextView
            android:id="@+id/today_tasks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“Š Hoje: 0/0"
            android:textColor="@color/vuzix_white"
            android:textSize="12sp"
            android:gravity="end" />

    </LinearLayout>

    <!-- === PRÃ“XIMA TAREFA (DESTAQUE) === -->
    <LinearLayout
        android:id="@+id/next_task_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/surface_view"
        android:layout_marginTop="10dp"
        android:background="@color/vuzix_background"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¯ PRÃ“XIMA TAREFA"
            android:textColor="@color/vuzix_mint_green"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/next_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Carregando..."
            android:textColor="@color/vuzix_white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>

    <!-- === ÃREA DE FEEDBACK PRINCIPAL === -->
    <LinearLayout
        android:id="@+id/feedback_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/next_task_layout"
        android:layout_marginTop="10dp"
        android:background="@color/vuzix_background"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Resultado principal -->
        <TextView
            android:id="@+id/feedback_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸš€ Assistente de Rotina"
            android:textColor="@color/vuzix_mint_green"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Detalhes -->
        <TextView
            android:id="@+id/feedback_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Sistema inicializado"
            android:textColor="@color/vuzix_white"
            android:textSize="14sp"
            android:gravity="center" />

        <!-- ConfianÃ§a (sÃ³ aparece quando necessÃ¡rio) -->
        <TextView
            android:id="@+id/feedback_confidence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text=""
            android:textColor="@color/vuzix_mint_green"
            android:textSize="12sp"
            android:gravity="center"
            android:visibility="gone" />

    </LinearLayout>

    <!-- === BOTÃ•ES DE TESTE === -->
    <LinearLayout
        android:id="@+id/test_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/feedback_layout"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:padding="6dp">

        <Button
            android:id="@+id/btn_test_task"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="ðŸ§ª Teste Tarefa"
            android:textColor="@color/vuzix_white"
            android:textSize="12sp"
            android:backgroundTint="@color/vuzix_mint_dark" />

        <Button
            android:id="@+id/btn_test_notification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="ðŸ”” Teste NotificaÃ§Ã£o"
            android:textColor="@color/vuzix_white"
            android:textSize="12sp"
            android:backgroundTint="@color/vuzix_mint_dark" />

    </LinearLayout>

    <!-- === CONTROLES PRINCIPAIS (BOTTOM) === -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/vuzix_background"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- GravaÃ§Ã£o manual -->
        <Button
            android:id="@+id/btn_manual_record"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="ðŸŽ¬ Gravar"
            android:textColor="@color/vuzix_white"
            android:textSize="14sp"
            android:backgroundTint="@color/vuzix_mint_green" />

        <!-- Visualizar tarefas -->
        <Button
            android:id="@+id/btn_view_tasks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:text="ðŸ“‹ Tarefas"
            android:textColor="@color/vuzix_white"
            android:textSize="14sp"
            android:backgroundTint="@color/vuzix_mint_dark" />

        <!-- RelatÃ³rio -->
        <Button
            android:id="@+id/btn_report"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="ðŸ“Š RelatÃ³rio"
            android:textColor="@color/vuzix_white"
            android:textSize="14sp"
            android:backgroundTint="@color/vuzix_mint_dark" />

    </LinearLayout>

</RelativeLayout>
