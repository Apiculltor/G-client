<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <!-- SurfaceView para preview da câmera (menor para dar espaço às informações de hábitos) -->
    <SurfaceView
        android:id="@+id/surface_view"
        android:layout_width="320dp"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <!-- === HEADER: STATUS GERAL === -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#80000000"
        android:orientation="horizontal"
        android:padding="6dp">

        <!-- Status de gravação -->
        <TextView
            android:id="@+id/recording_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="⚪ Pronto"
            android:textColor="#00FF00"
            android:textSize="12sp"
            android:textStyle="bold" />

        <!-- Status de conexão -->
        <TextView
            android:id="@+id/connection_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📡 Desconectado"
            android:textColor="#FF6600"
            android:textSize="12sp"
            android:gravity="center" />

        <!-- Tarefas de hoje -->
        <TextView
            android:id="@+id/today_tasks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📊 Hoje: 0/0"
            android:textColor="#FFFF00"
            android:textSize="12sp"
            android:gravity="end" />

    </LinearLayout>

    <!-- === PRÓXIMA TAREFA (DESTAQUE) === -->
    <LinearLayout
        android:id="@+id/next_task_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/surface_view"
        android:layout_marginTop="10dp"
        android:background="#80004400"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎯 PRÓXIMA TAREFA"
            android:textColor="#00FF00"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/next_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Carregando..."
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>

    <!-- === ÁREA DE FEEDBACK PRINCIPAL === -->
    <LinearLayout
        android:id="@+id/feedback_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/next_task_layout"
        android:layout_marginTop="10dp"
        android:background="#80000000"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Resultado principal -->
        <TextView
            android:id="@+id/feedback_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🚀 Assistente de Rotina"
            android:textColor="#00FF00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Detalhes -->
        <TextView
            android:id="@+id/feedback_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Sistema inicializado"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:gravity="center" />

        <!-- Confiança (só aparece quando necessário) -->
        <TextView
            android:id="@+id/feedback_confidence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text=""
            android:textColor="#FFFF00"
            android:textSize="12sp"
            android:gravity="center"
            android:visibility="gone" />

    </LinearLayout>

    <!-- === BOTÕES DE AÇÃO PARA CONCLUSÃO DE TAREFAS === -->
    <LinearLayout
        android:id="@+id/task_action_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/feedback_layout"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:padding="6dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_task_completed"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="✅ Concluída"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:background="#004400"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_task_continue"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:text="⏳ Continuar"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:background="#444400"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_task_skip"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="⏭ Pular"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:background="#440000"
            android:visibility="gone" />

    </LinearLayout>

    <!-- === BOTÕES DE TESTE === -->
    <LinearLayout
        android:id="@+id/test_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/task_action_buttons"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:padding="6dp">

        <Button
            android:id="@+id/btn_test_task"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="🧪 Teste Tarefa"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:background="#006600" />

        <Button
            android:id="@+id/btn_test_notification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="🔔 Teste Notificação"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:background="#660000" />

    </LinearLayout>

    <!-- === CONTROLES PRINCIPAIS (BOTTOM) === -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#80000000"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Gravação manual -->
        <Button
            android:id="@+id/btn_manual_record"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="🎬 Gravar"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="#006600" />

        <!-- Visualizar tarefas -->
        <Button
            android:id="@+id/btn_view_tasks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:text="📋 Tarefas"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="#000066" />

        <!-- Relatório -->
        <Button
            android:id="@+id/btn_report"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="📊 Relatório"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="#660066" />

    </LinearLayout>

</RelativeLayout>
