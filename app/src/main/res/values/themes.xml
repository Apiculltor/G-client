<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ===================================================================== -->
    <!-- TEMA PRINCIPAL VUZIX BLADE - COMPATÍVEL COM API 22                   -->
    <!-- Baseado em AppCompat para compatibilidade com Android 5.1.1          -->
    <!-- ===================================================================== -->

    <style name="Theme.VuzixBladeApp" parent="Theme.AppCompat.NoActionBar">
        <!-- CORES BÁSICAS COMPATÍVEIS COM API 22 -->
        <item name="colorPrimary">@color/vuzix_mint_green</item>
        <item name="colorPrimaryDark">@color/vuzix_mint_dark</item>
        <item name="colorAccent">@color/vuzix_mint_green</item>
        
        <!-- BACKGROUND TRANSPARENTE PARA HUD -->
        <item name="android:windowBackground">@color/vuzix_background</item>
        
        <!-- CONFIGURAÇÕES HUD -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        
        <!-- TEXT COLORS -->
        <item name="android:textColorPrimary">@color/vuzix_text_primary</item>
        <item name="android:textColorSecondary">@color/vuzix_text_secondary</item>
    </style>

    <!-- Tema simplificado para API 22 - SEM dependência de HudTheme -->

</resources>
